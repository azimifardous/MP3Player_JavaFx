<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="189.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mp3player_javafx.App">
   <children>
      <Label fx:id="songLabel" alignment="CENTER" prefHeight="114.0" prefWidth="600.0" text="MP3 Player">
         <font>
            <Font name="Apple LiGothic Medium" size="50.0" />
         </font>
      </Label>
      <ProgressBar fx:id="songProgressBar" layoutY="121.0" prefHeight="20.0" prefWidth="600.0" progress="0.0" />
      <Button fx:id="playBtn" layoutY="147.0" mnemonicParsing="false" onAction="#playMedia" text="Play">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="pauseBtn" layoutX="63.0" layoutY="147.0" mnemonicParsing="false" onAction="#pauseMedia" text="Pause">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="resetBtn" layoutX="142.0" layoutY="147.0" mnemonicParsing="false" onAction="#resetMedia" text="Reset">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="prevBtn" layoutX="216.0" layoutY="147.0" mnemonicParsing="false" onAction="#prevMedia" text="Prev">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="nextBtn" layoutX="281.0" layoutY="147.0" mnemonicParsing="false" onAction="#nextMedia" text="Next">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <ComboBox fx:id="speedBox" layoutX="348.0" layoutY="147.0" onAction="#changeSpeed" prefHeight="39.0" prefWidth="90.0" promptText="Speed" />
      <Slider fx:id="volumeSlider" layoutX="438.0" layoutY="159.0" max="200.0" prefHeight="16.0" prefWidth="161.0" value="100.0" />
   </children>
</AnchorPane>
